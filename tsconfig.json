{
    "compilerOptions": {
        "target": "es2016",
        "experimentalDecorators": true,
        "module": "commonjs",
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "@*": ["./*"]
        },
        "moduleResolution": "node",
        "typeRoots": ["./types", "node_modules/@types"],
        "types": ["node", "jest"],
        "resolveJsonModule": true,
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["**/*", "**/*.d.ts"],
    "exclude": ["node_modules"]
}
